@inherits Ava.Components.Bases.LayoutBase

@layout AccountLayout
<AuthorizeView>
    <Authorized>
        @if (CurrentUser != default)
        {
            <div class="flex justify-center">
                <div class="w-4/5">
                    <nav class="bg-gray-900 border-gray-200 px-4 lg:px-6 py-2.5 dark:bg-gray-800 rounded-lg mb-1">
                        <div class="flex flex-wrap justify-between items-center mx-auto max-w-screen-xl">
                            <a href="Account/Manage" class="flex items-center">
                                <img src="images/avatars/@CurrentUser.ProfilePictureUrl" class="mr-3 h-14 rounded" alt="@CurrentUser.DisplayName" title="@CurrentUser.DisplayName" />
                                <span class="self-center text-xl text-primary font-semibold whitespace-nowrap dark:text-white">@CurrentUser.DisplayName</span>
                            </a>
                            <ManageNavMenu />
                        </div>
                    </nav>
                    <div>
                        <div class="flex">
                            @Body
                        </div>
                    </div>
                </div>
            </div>
        }
    </Authorized>
    <NotAuthorized>
        <RedirectToLogin />
    </NotAuthorized>
</AuthorizeView>
